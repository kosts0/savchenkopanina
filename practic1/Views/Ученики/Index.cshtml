@model IEnumerable<practic1.Models.Ученики>

@{
    ViewBag.Title = "Index";
}


<h4>@Model.FirstOrDefault().Родители.Фамилия @Model.FirstOrDefault().Родители.Имя @Model.FirstOrDefault().Родители.Отчество<br />
Ваши дети</h4>

<table class="table">
    @foreach(var item in Model)
    {
        <tr>
            <td>
                @item.Фамилия @item.Имя @item.Отчество
            </td>
            <td>@Html.ActionLink("Успеваемость", "Progress", new { id = item.ID_ученика, x = 0 })</td>
            <td>
                @Html.ActionLink("Расписание", "Rasp", new { id = item.ID_класса, x = "Monday",y = 0})
            </td>
        </tr>
    }
</table>
